<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aydin.firebasedemo.PrimaryController">
    <children>
        <VBox alignment="CENTER" prefHeight="380.0" prefWidth="530.0" spacing="14.0">
            <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
            <children>
                <Label text="Welcome â€” Register or Sign in"/>
                <TextField fx:id="emailTextField" promptText="email@example.com"/>
                <PasswordField fx:id="passwordTextField" promptText="password"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="registerButton" text="Register" prefHeight="30.0" prefWidth="100.0"
                                onAction="#registerButtonClicked"/>
                        <Button fx:id="switchSecondaryViewButton" text="Sign in" prefHeight="30.0" prefWidth="100.0"
                                onAction="#switchToSecondary"/>
                    </children>
                </HBox>
                <TextArea fx:id="outputTextArea" prefHeight="220.0" prefWidth="500.0" editable="false"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
